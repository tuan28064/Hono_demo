{
  "name": "hono-demo-monorepo",
  "version": "1.0.0",
  "description": "Hono Framework Demo - Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @hono-demo/backend",
    "dev:frontend": "npm run dev -w @hono-demo/frontend",
    "build": "npm run build -w @hono-demo/frontend && npm run build -w @hono-demo/backend",
    "build:frontend": "npm run build -w @hono-demo/frontend",
    "build:backend": "npm run build -w @hono-demo/backend",
    "deploy": "npm run build:frontend && npm run deploy -w @hono-demo/backend",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
